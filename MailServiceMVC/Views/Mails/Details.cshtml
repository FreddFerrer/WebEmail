@model Mails.Entities.Mail

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebEmailMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MailServiceMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebEmailMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mails" asp-action="Inbox">Bandeja de entrada</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mails" asp-action="Outbox">Bandeja de salida</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mails" asp-action="Create">Nuevo email</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h1 class="text-center">Detalles</h1>
        <div class="mail-details">
            <h4 class="text-center">Mail</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-end">Remitente:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SenderEmail)</dd>

                <dt class="col-sm-3 text-end">Destinatario:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Receiver)</dd>

                <dt class="col-sm-3 text-end">Asunto:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                <dt class="col-sm-3 text-end">Cuerpo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Body)</dd>

                <dt class="col-sm-3 text-end">Fecha:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
            </dl>
        </div>
    </div>
</body>
